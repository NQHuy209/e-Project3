@model Project_3.Models.CANDIDATES
@{
    ViewBag.Title = "Update Candidate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Update Candidate</h1>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <b>@ViewBag.Message</b>
                        </div>
                    }
                    @using (Html.BeginForm("Update", "Candidate", FormMethod.Post, new { @class = "forms-sample" }))
                    {
                        <div class="form-group">
                            <label for="FullName">Full Name:</label>
                            <input type="text" class="form-control" name="FullName" placeholder="Full Name" value="@Model.FullName">
                            @Html.ValidationMessageFor(c => c.FullName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Birth">Date of Birth:</label>
                            <input type="date" class="form-control" name="Birth" value="@Html.DisplayFor(c => c.Birth)">
                            @Html.ValidationMessageFor(c => c.Birth, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Gender">Gender:</label>
                            @Html.DropDownListFor(c => c.Gender, new[] { new SelectListItem() { Text = "Male", Value = "Male" }, new SelectListItem() { Text = "Female", Value = "Female" } }, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="PhoneNumber">Phone Number:</label>
                            <input type="number" class="form-control" name="PhoneNumber" placeholder="Phone Number" value="@Model.PhoneNumber">
                            @Html.ValidationMessageFor(c => c.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Email">Email:</label>
                            <input type="email" class="form-control" name="Email" placeholder="Email" value="@Model.Email">
                            @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Address">Address:</label>
                            <input type="text" class="form-control" name="Address" placeholder="Address" value="@Model.Address">
                            @Html.ValidationMessageFor(c => c.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Education">Education:</label>
                            <input type="text" class="form-control" name="Education" placeholder="Education" value="@Model.Education">
                            @Html.ValidationMessageFor(c => c.Education, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="WorkExperience">Work Experience:</label>
                            <input type="text" class="form-control" name="WorkExperience" placeholder="Work Experience" value="@Model.WorkExperience">
                            @Html.ValidationMessageFor(c => c.WorkExperience, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-inverse-primary btn-fw">Save</button>
                        @Html.ActionLink("Cancel", "", "Candidate", new { area = "Admin" }, new { @class = "btn btn-inverse-secondary btn-fw" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>