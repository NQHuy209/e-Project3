@using PagedList.Mvc;
@model PagedList.IPagedList<Project_3.Models.CANDIDATES>
@{
    ViewBag.Title = "Manage Candidate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Candidate</h1>
                    @using (Html.BeginForm("Index", "Candidate", FormMethod.Get))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" name="search" id="search" placeholder="Search Username or Full Name" style="width:30%" value="@ViewBag.Search">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    }
                    @Html.ActionLink("Create", "Create", "Candidate", new { area = "Admin" }, new { @class = "btn btn-inverse-primary btn-fw" })
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Full Name</th>
                                    <th>Date of Birth</th>
                                    <th>Gender</th>
                                    <th>Phone Number</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>Education</th>
                                    <th>Work Experience</th>
                                    <th>Username</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    int i = (ViewBag.Page * ViewBag.PageSize) - (ViewBag.PageSize - 1);
                                    foreach (var candidate in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@candidate.FullName</td>
                                            <td>@candidate.Birth.Day/@candidate.Birth.Month/@candidate.Birth.Year</td>
                                            <td>@candidate.Gender</td>
                                            <td>@candidate.PhoneNumber</td>
                                            <td>@candidate.Email</td>
                                            <td>@candidate.Address</td>
                                            <td>@candidate.Education</td>
                                            <td>@candidate.WorkExperience</td>
                                            <td>@candidate.Username</td>
                                            <td>
                                                @Html.ActionLink(" ", "Update", "Candidate", new { area = "Admin", id = candidate.CandidateId }, new { title = "Update", @class = "mdi mdi-pencil-outline", style = "font-size:25px;text-decoration:none" })
                                                @Html.ActionLink(" ", "History", "Candidate", new { area = "Admin", id = candidate.CandidateId }, new { title = "Exam History", @class = "mdi mdi-history", style = "font-size:25px;text-decoration:none" })
                                                @Html.ActionLink(" ", "ResetPassword", "Candidate", new { area = "Admin", id = candidate.CandidateId }, new { title = "Reset Password", @class = "mdi mdi-replay", style = "font-size:25px;text-decoration:none" })
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="11" style="text-align:center; font-size:large;">
                                            <b>No Data</b>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="center">
                        @Html.PagedListPager(Model, p => Url.Action("Index", new { page = p, searchPage = ViewBag.Search }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>