@using PagedList.Mvc;
@model PagedList.IPagedList<Project_3.Models.RESULTS>
@{
    ViewBag.Title = "Result " + ViewBag.ExamName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Result @ViewBag.ExamName</h1>
                    @using (Html.BeginForm("Result", "Exam", FormMethod.Get))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" name="search" id="search" placeholder="Search Username or Full Name" style="width:30%" value="@ViewBag.Search">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    }
                    @Html.ActionLink("Back", "", "Exam", new { area = "Admin" }, new { @class = "btn btn-outline-secondary btn-fw" })
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Full Name</th>
                                    <th>Date of Birth</th>
                                    <th>Gender</th>
                                    <th>Username</th>
                                    <th>Score</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    int i = (ViewBag.Page * ViewBag.PageSize) - (ViewBag.PageSize - 1);
                                    foreach (var result in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@result.CANDIDATES.FullName</td>
                                            <td>@result.CANDIDATES.Birth.Day/@result.CANDIDATES.Birth.Month/@result.CANDIDATES.Birth.Year</td>
                                            <td>@result.CANDIDATES.Gender</td>
                                            <td>@result.CANDIDATES.Username</td>
                                            <td>@result.Score/@result.EXAMINATION.Score</td>
                                            <td><b>@result.STATUS_RESULTS.StatusName</b></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" style="text-align:center; font-size:large;">
                                            <b>No Data</b>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="center">
                        @Html.PagedListPager(Model, p => Url.Action("Result", new { page = p, searchPage = ViewBag.Search }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>