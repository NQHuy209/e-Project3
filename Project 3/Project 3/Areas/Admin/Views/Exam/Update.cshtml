@model Project_3.Models.EXAMINATION
@{
    ViewBag.Title = "Update Exam";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Update Exam</h1>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <b>@ViewBag.Message</b>
                        </div>
                    }
                    @using (Html.BeginForm("Update", "Exam", FormMethod.Post, new { @class = "forms-sample" }))
                    {
                        <div class="form-group">
                            <label for="ExaminationName">Name:</label>
                            <input type="text" class="form-control" name="ExaminationName" placeholder="Name" value="@Model.ExaminationName">
                            @Html.ValidationMessageFor(e => e.ExaminationName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Start_time">Start Time:</label>
                            <input type="datetime-local" class="form-control" name="Start_time" value="@Html.DisplayFor(e => e.Start_time)">
                            @Html.ValidationMessageFor(e => e.Start_time, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="End_time">End Time:</label>
                            <input type="datetime-local" class="form-control" name="End_time" value="@Html.DisplayFor(e => e.End_time)">
                            @Html.ValidationMessageFor(e => e.End_time, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Descriptions">Description:</label>
                            <textarea name="Descriptions" class="form-control" rows="6" placeholder="Description">@Model.Descriptions</textarea>
                            @Html.ValidationMessageFor(e => e.Descriptions, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-inverse-primary btn-fw">Save</button>
                        @Html.ActionLink("Cancel", "", "Exam", new { area = "Admin" }, new { @class = "btn btn-inverse-secondary btn-fw" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>