@model List<Project_3.Models.ROLES>
@{
    ViewBag.Title = "Role";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Role</h1>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    int i = 1;
                                    foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@role.RoleName</td>
                                            <td>
                                                @if (role.RoleId != 1)
                                                {
                                                    @Html.ActionLink(" ", "ManagerRole", "Role", new { area = "Admin", id = role.RoleId }, new { title = "Manager Role", @class = "mdi mdi-account-multiple-outline", style = "font-size:25px;text-decoration:none" })
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" style="text-align:center; font-size:large;">
                                            <b>No Data</b>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>