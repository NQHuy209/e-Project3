@{
    ViewBag.Title = "Create Question";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Create Question</h1>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <b>@ViewBag.Message</b>
                        </div>
                    }
                    @using (Html.BeginForm("Create", "Question", FormMethod.Post, new { @class = "forms-sample" }))
                    {
                        <div class="row">
                            <div class="form-group">
                                <label for="TopicId">Topic:</label>
                                <select class="form-control" name="TopicId">
                                    @foreach (var topic in Project_3.Data.Common.Topic())
                                    {
                                        <option value=@topic.TopicId>@topic.TopicName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="Content">Content:</label>
                                <input type="text" class="form-control" name="Content" placeholder="Content">
                                @Html.ValidationMessage("Content", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        for (int i = 0; i < 4; i++)
                        {
                            <div class="row">
                                <div class="form-group">
                                    <label for="Answer_@((char)('A' + i))">Answer @((char)('A' + i)):</label>
                                    <input type="text" class="form-control" name="Answer_@((char)('A' + i))" placeholder="Answer @((char)('A' + i))">
                                    @Html.ValidationMessage("Answer_" + ((char)('A' + i)), "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="form-group">
                                <label for="Correct_Answer_Id">Correct Answer:</label>
                                <select class="form-control" name="Correct_Answer_Id">
                                    @foreach (var answer in Project_3.Data.Common.CorrectAnswer())
                                    {
                                        <option value=@answer.Correct_Answer_Id>@answer.Answer</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="Point">Point:</label>
                                <select class="form-control" name="Point">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <option value=@i>@i</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-inverse-primary btn-fw">Create</button>
                        @Html.ActionLink("Cancel", "", "Question", new { area = "Admin", page = Project_3.Data.Common.Page, searchPage = Project_3.Data.Common.Search, topicPage = Project_3.Data.Common.SearchTopic }, new { @class = "btn btn-inverse-secondary btn-fw" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>