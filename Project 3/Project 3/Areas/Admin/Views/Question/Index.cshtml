@using PagedList.Mvc;
@model PagedList.IPagedList<Project_3.Models.QUESTIONS>
@{
    ViewBag.Title = "Manage Question";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Questions</h1>
                    <div class="alert alert-primary" role="alert">
                        <b>There will be questions that do not have an update button because these questions are in the activated test and must wait until the end of the test to be updated.</b>
                    </div>
                    @using (Html.BeginForm("Index", "Question", FormMethod.Get))
                    {
                        <div class="form-group">
                            Search: <input type="text" class="form-control" name="search" placeholder="Search Content" style="width:30%" value="@ViewBag.Search">
                            Topic:
                            <select class="form-control" name="topic" style="width:30%">
                                <option value=0>- - -</option>
                                @foreach (var topic in Project_3.Data.Common.Topic())
                                {
                                    if (ViewBag.Topic == topic.TopicId)
                                    {
                                        <option value=@topic.TopicId selected>@topic.TopicName</option>
                                    }
                                    else
                                    {
                                        <option value=@topic.TopicId>@topic.TopicName</option>
                                    }
                                }
                            </select>
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    }
                    @Html.ActionLink("Create", "Create", "Question", new { area = "Admin" }, new { @class = "btn btn-inverse-primary btn-fw" })
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Topic</th>
                                    <th>Content</th>
                                    <th>Answer A</th>
                                    <th>Answer B</th>
                                    <th>Answer C</th>
                                    <th>Answer D</th>
                                    <th>Correct Answer</th>
                                    <th>Point</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    int i = (ViewBag.Page * ViewBag.PageSize) - (ViewBag.PageSize - 1);
                                    foreach (var question in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@question.TOPIC.TopicName</td>
                                            <td><b>@question.Content</b></td>
                                            <td>@question.Answer_A</td>
                                            <td>@question.Answer_B</td>
                                            <td>@question.Answer_C</td>
                                            <td>@question.Answer_D</td>
                                            <td><b>@question.CORRECT_ANSWER.Answer</b></td>
                                            <td>@question.Point</td>
                                            <td>
                                                @if (!Project_3.Data.Common.CheckQuestionInExamActivate(question.QuestionId))
                                                {
                                                    @Html.ActionLink(" ", "Update", "Question", new { area = "Admin", id = question.QuestionId }, new { title = "Update", @class = "mdi mdi-pencil-outline", style = "font-size:25px;text-decoration:none" })
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" style="text-align:center; font-size:large;">
                                            <b>No Data</b>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="center">
                        @Html.PagedListPager(Model, p => Url.Action("Index", new { page = p, searchPage = ViewBag.Search, topicPage = ViewBag.Topic }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    Project_3.Data.Common.Page = ViewBag.Page;
    Project_3.Data.Common.Search = ViewBag.Search;
    Project_3.Data.Common.SearchTopic = ViewBag.Topic;
}