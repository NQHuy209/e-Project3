                    <div class="shadow-box">
                        <div class="img"><img height="100" src="@Url.Content("~/img/home/lession3.jpg")" alt="Computer Technology"></div>
                        <h3>Computer Technology</h3>
                        <p>And finally, knowledge of Computer Technology.</p>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Ready", "Guide", "AptitudeTest", new { area = "", id = ViewBag.ExamId }, new { @class = "btn blue", style = "margin: 39px 0px 0px 486px;" })
